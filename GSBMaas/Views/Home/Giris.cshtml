@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üyelik Girişi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background: linear-gradient(to right, #007bff, orange);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 100%;
            max-width: 420px;
        }

            .login-container img {
                width: 270px;
                margin-bottom: 15px;
            }

        .info-text {
            font-size: 15px;
            color: #555;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            font-size: 16px;
            padding: 12px;
        }

        .btn-primary {
            background: #007bff;
            border: none;
            padding: 12px;
            font-size: 18px;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background: #0056b3;
            }

        .modal-content {
            border-radius: 10px;
        }

        .error-icon {
            font-size: 50px;
            color: red;
        }

        /* T.C. Kimlik Alanı için */
        .tc-kimlik {
            -webkit-text-security: disc;
        }

        /* Radyo butonu ile yazıyı yanyana yapmak için */
        .radio-label {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Hata mesajını gizli yapalım */
        .error-message {
            display: none;
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="~/images/esendikalogo.png" alt="E-Sendika Logo">

        <p class="info-text">
            Bu uygulama sadece <b>TOLEYİS üyelerine</b> özeldir. <br>
            Üyeliğinize ait <b>Sendika Üyeliği Doğrulama Kodu</b> ile <br>
            <b>T.C. Kimlik numaranızı</b> giriniz.
        </p>

        <form id="loginForm">
            <div class="mb-3">
                <input type="text" id="tcKimlik" class="form-control tc-kimlik" required maxlength="11" minlength="11" placeholder="🔑 11 Haneli T.C. Kimlik Numaranızı Giriniz">
                <div id="tcError" class="text-danger mt-2" style="display: none;">Geçersiz T.C. Kimlik Numarası!</div>
            </div>
            <div class="mb-3">
                <input type="text" id="uyelikKodu" class="form-control" required maxlength="9" placeholder="🔑 9 Haneli Üyelik Doğrulama Kodunuzu Giriniz">
            </div>

            <!-- Kişisel Veri Onayı -->
            <div class="mb-3 text-start radio-label">
                <input type="radio" id="kisiselVeriOnay">
                <label for="kisiselVeriOnay">
                    Kişisel verileriniz <a href="#" data-bs-toggle="modal" data-bs-target="#kisiselVeriModal">Kişisel Veri Onam Metni</a> doğrultusunda işlenecektir.
                </label>
            </div>
            <div id="onayHata" class="error-message">Kişisel Veri Onam Metni'ni onaylamalısınız!</div>

            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>
    </div>

    <!-- ❗ Kişisel Veri Onam Metni Modal -->
    <div class="modal fade" id="kisiselVeriModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Kişisel Veri Onam Metni</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    @Html.Partial("_KisiselVeriOnamMetni")
                </div>
            </div>
        </div>
    </div>

    <!-- ❗ Hata Mesajı için Modal -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <i class="bi bi-exclamation-triangle-fill error-icon"></i>
                    <h4 class="mt-3 text-danger">Hata Oluştu!</h4>
                    <p class="mt-2">
                        Girmiş olduğunuz TC kimlik numarası veya doğrulama kodu hatalıdır.<br>
                        Lütfen kontrol ederek tekrar deneyiniz.<br>
                        Sendika üyelik durumunuzun kontrolü için, bağlı bulunduğunuz sendika şubenizle iletişime geçebilirsiniz.
                    </p>
                    <button type="button" class="btn btn-danger w-50" data-bs-dismiss="modal">Tamam</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function isValidTCKN(tckn) {
            return /^[1-9][0-9]{10}$/.test(tckn);
        }

        document.getElementById("loginForm").addEventListener("submit", function (event) {
            event.preventDefault();

            let tcKimlik = document.getElementById("tcKimlik").value;
            let uyelikKodu = document.getElementById("uyelikKodu").value;
            let errorDiv = document.getElementById("tcError");
            let onayKutusu = document.getElementById("kisiselVeriOnay");
            let onayHata = document.getElementById("onayHata");

            if (!isValidTCKN(tcKimlik)) {
                errorDiv.style.display = "block";
                return;
            } else {
                errorDiv.style.display = "none";
            }

            if (!onayKutusu.checked) {
                onayHata.style.display = "block"; // ❗ Hata mesajını göster
                return;
            } else {
                onayHata.style.display = "none"; // ✅ Kullanıcı onayladıysa hata mesajını gizle
            }

            fetch("/Home/GirisKontrol", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ tcKimlik: tcKimlik, uyelikKodu: uyelikKodu })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = "/Home/Index"; // Giriş başarılıysa yönlendir
                    } else {
                        $("#errorModal").modal("show"); // ❗ Hata Modalını Aç
                    }
                })
                .catch(error => {
                    $("#errorModal").modal("show"); // ❗ Bağlantı hatası olursa da modal göster
                });
        });
    </script>
</body>
</html>
