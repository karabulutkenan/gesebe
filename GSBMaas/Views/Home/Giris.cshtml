@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üyelik Girişi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #007bff, orange);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 100%;
            max-width: 420px;
        }

            .login-container img {
                width: 270px;
                margin-bottom: 15px;
            }

        .info-text {
            font-size: 15px;
            color: #555;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            font-size: 16px;
            padding: 12px;
        }

        .btn-primary {
            background: #007bff;
            border: none;
            padding: 12px;
            font-size: 18px;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background: #0056b3;
            }

        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="~/images/esendikalogo.png" alt="E-Sendika Logo">

        <p class="info-text">
            Bu uygulama sadece <b>TOLEYİS üyelerine</b> özeldir. <br>
            Üyeliğinize ait <b>Sendika Üyeliği Doğrulama Kodu</b> ile <br>
            <b>T.C. Kimlik numaranızı</b> giriniz.
        </p>

        <form id="loginForm">
            <div class="mb-3">
                <input type="text" id="tcKimlik" class="form-control" required maxlength="11" minlength="11" placeholder="🔑 11 Haneli T.C. Kimlik Numaranızı Giriniz">
                <div id="tcError" class="error-message" style="display: none;">Geçersiz T.C. Kimlik Numarası!</div>
            </div>
            <div class="mb-3">
                <input type="text" id="uyelikKodu" class="form-control" required maxlength="9" placeholder="🔑 9 Haneli Üyelik Doğrulama Kodunuzu Giriniz">
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>
    </div>

    <script>
        function isValidTCKN(tckn) {
            if (/^[1-9][0-9]{10}$/.test(tckn)) {
                const digits = tckn.split('').map(Number);
                const sumOdd = digits[0] + digits[2] + digits[4] + digits[6] + digits[8];
                const sumEven = digits[1] + digits[3] + digits[5] + digits[7];
                const checkDigit1 = ((sumOdd * 7) - sumEven) % 10;
                const checkDigit2 = (sumOdd + sumEven + digits[9]) % 10;
                return checkDigit1 === digits[9] && checkDigit2 === digits[10];
            }
            return false;
        }

        document.getElementById("loginForm").addEventListener("submit", function (event) {
            let tcKimlik = document.getElementById("tcKimlik").value;
            let errorDiv = document.getElementById("tcError");

            if (!isValidTCKN(tcKimlik)) {
                event.preventDefault();  // Formun gönderilmesini engelle
                errorDiv.style.display = "block";
            } else {
                errorDiv.style.display = "none";
            }
        });
    </script>
</body>
</html>
