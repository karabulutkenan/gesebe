
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "E-Sendika Anasayfa";
}
@{
    var userAd = Context.Session.GetString("UserAd") ?? "Misafir";
    var userSoyad = Context.Session.GetString("UserSoyad") ?? "";
    var unvan = Context.Session.GetString("Unvan") ?? "";
}

<div class="container mt-2">
    <div class="d-flex justify-content-between align-items-center bg-light rounded shadow-sm">
        @if ( @unvan=="TOLEYİS SENDİKASI" )
        {
            <h7 class="text-dark">
                Hoşgeldiniz, <b>@userAd BAŞKAN</b>  <br />
                <b style="font-size: 8px; color:darkgrey"> 🏢 @unvan</b>
            </h7>
        }
        else {
            <h7 class="text-dark">
            Hoşgeldiniz, <b>@userAd @userSoyad</b>  <br /> 
            <b style="font-size: 8px; color:darkgrey"> 🏢 @unvan</b>
        </h7>
        }
        <form asp-controller="Home" asp-action="Cikis" method="post">
            <button type="submit" class="btn btn-danger">Çıkış</button>
        </form>
    </div>
</div>

<div class="container-fluid px-2 mt-2 ">
    <div class="row gx-0" style="row-gap: 15px;">
        <!-- Satır aralığı 10px -->
        <!-- GSB Maaş Hesaplama -->
        <div class="col-6 col-md-4">
            <a href="/Tablo" class="text-decoration-none">
                <div class="tile bg-info shadow rounded text-white text-center d-flex flex-column align-items-center justify-content-center" style="height: 150px;">
                    <i class="bi bi-calculator" style="font-size: 3rem;"></i>
                    <h5 class="mt-2">GSB Maaş Hesaplama</h5>
                </div>
            </a>
        </div>

        <!-- Dilekçe Örnekleri -->
        <div class="col-6 col-md-4">
            <a href="/Home/DilekceOrnekleri" class="text-decoration-none">
                <div class="tile bg-danger rounded shadow text-white text-center d-flex flex-column align-items-center justify-content-center" style="height: 150px;">
                    <i class="bi bi-file-earmark-text" style="font-size: 3rem;"></i>
                    <h5 class="mt-2">Dilekçe Örnekleri</h5>
                </div>
            </a>
        </div>

        <!-- Kamu Misafirhaneleri -->
        <div class="col-6 col-md-4">
            <a href="/KamuMisafirhaneleri" class="text-decoration-none">
                <div class="tile bg-secondary rounded shadow text-white text-center d-flex flex-column align-items-center justify-content-center" style="height: 150px;">
                    <i class="bi bi-building" style="font-size: 3rem;"></i>
                    <h5 class="mt-2">Kamu Misafirhaneleri</h5>
                </div>
            </a>
        </div>

        <!-- Kanun ve Yönetmelikler -->
        <div class="col-6 col-md-4">
            <a href="/Home/KanunVeYonetmelikler" class="text-decoration-none">
                <div class="tile bg-warning rounded shadow text-white text-center d-flex flex-column align-items-center justify-content-center" style="height: 150px;">
                    <i class="bi bi-book" style="font-size: 3rem;"></i>
                    <h5 class="mt-2">Kanun ve Yönetmelikler</h5>
                </div>
            </a>
        </div>

        <!-- Kıdem Tazminatı Hesaplama -->
        <div class="col-6 col-md-4">
            <a href="/KamuKidemTazminatiHesaplama/Index" class="text-decoration-none">
                <div class="tile bg-success rounded shadow text-white text-center d-flex flex-column align-items-center justify-content-center" style="height: 150px;">
                    <i class="bi bi-cash-stack" style="font-size: 3rem;"></i>
                    <h5 class="mt-2">Kamu Kıdem Tazminatı Hesaplama</h5>
                </div>
            </a>
        </div>

        <!-- İşçi İşveren İlişkileri (Sorular-Cevaplar) -->
        <div class="col-6 col-md-4">
            <a href="/SorularCevaplar" class="text-decoration-none">
                <div class="tile bg-primary rounded shadow text-white text-center d-flex flex-column align-items-center justify-content-center" style="height: 150px;">
                    <i class="bi bi-question-circle" style="font-size: 3rem;"></i>
                    <h5 class="mt-2 text-center">İşçi İşveren İlişkileri (Sorular-Cevaplar)</h5>
                </div>
            </a>
        </div>
    </div>
</div>
