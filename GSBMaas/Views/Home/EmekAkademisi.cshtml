@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Emek Akademisi";
    var userAd = Context.Session.GetString("UserAd") ?? "Misafir";
    var userSoyad = Context.Session.GetString("UserSoyad") ?? "";
}

<div class="container-fluid p-0">
    <!-- Header -->
    <header class="bg-success shadow-sm py-2">
        <div class="container">
            <div class="d-flex align-items-center">
                <a href="/" class="text-white me-3" style="text-decoration: none; font-size: 1.5rem;">
                    ↩️
                </a>
                <h1 class="h6 mb-0 text-white text-uppercase" style="margin-right: 10px;">Emek Akademisi</h1>
                <p class="text-white mb-0" style="font-size: 0.8rem;">Eğitim videoları</p>
            </div>
        </div>
    </header>

    <!-- Video Listesi -->
    <div class="container mt-4">
        <div class="row g-4">
            @if (ViewBag.Videos != null && ViewBag.Videos.Count > 0)
            {
                foreach (var video in ViewBag.Videos)
                {
                    <div class="col-12 col-md-6 col-lg-4 mb-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-body p-0">
                                <div style="position: relative; width: 100%; padding-bottom: 56.25%;">
                                    <iframe style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;" 
                                            src="https://www.youtube.com/embed/@video.VideoId" 
                                            title="@video.Title" 
                                            allowfullscreen></iframe>
                                </div>
                                <div class="p-3">
                                    <p class="card-text small text-muted">@video.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">Henüz video bulunmuyor.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> 