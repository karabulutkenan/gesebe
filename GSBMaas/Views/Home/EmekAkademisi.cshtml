@{
    ViewData["Title"] = "Emek Akademisi";
}

<div class="container-fluid p-0">
    <!-- Header -->
    <header class="bg-success shadow-sm py-2">
        <div class="container">
            <div class="d-flex align-items-center">
                <a href="/" class="text-white me-3" style="text-decoration: none; font-size: 1.5rem;">
                    ↩️
                </a>
                <h1 class="h6 mb-0 text-white text-uppercase" style="margin-right: 10px;">Emek Akademisi</h1>
                <p class="text-white mb-0" style="font-size: 0.8rem;">Çok Yakında Hizmetinizde</p>
            </div>
        </div>
    </header>

    <!-- İçerik -->
    <main class="bg-light py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <i class="bi bi-mortarboard mb-4" style="font-size: 4rem; color: #28a745;"></i>
                            <h2 class="mb-4">Emek Akademisi</h2>
                            <p class="lead mb-4">Çok yakında sizlerle buluşuyoruz!</p>
                            <div class="progress mb-4" style="height: 10px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <p class="text-muted">Geliştirme çalışmalarımız devam ediyor. En kısa sürede hizmetinizde olacağız.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div> 