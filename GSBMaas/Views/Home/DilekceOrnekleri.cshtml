@{
    ViewData["Title"] = "Dilekçe Örnekleri";
    var dilekceler = new List<(string Baslik, string DosyaYolu)> {
        ("İşten Çıkış Dilekçesi", "/docs/isten_cikis.docx"),
        ("İzin Talep Dilekçesi", "/docs/izin_talep.docx"),
        ("Şikayet Dilekçesi", "/docs/sikayet.docx"),
        ("Maaş Artışı Talebi", "/docs/maas_artisi.docx"),
        ("Fazla Mesai Talebi", "/docs/fazla_mesai.docx"),
        ("Tayin Talebi", "/docs/tayin_talep.docx")
    };
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Dilekçe Örnekleri</h1>
        <p class="text-muted">Hazırlanmış dilekçe örneklerini buradan indirebilirsiniz.</p>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4">
        @foreach (var dilekce in dilekceler)
        {
            <div class="col">
                <a href="@dilekce.DosyaYolu" class="text-decoration-none" download>
                    <div class="card h-100 bg-light text-center shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <h5 class="card-title text-dark">@dilekce.Baslik</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
