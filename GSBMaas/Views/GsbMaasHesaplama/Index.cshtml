        });

        function updateYevmiyeValues(yevmiye1, yevmiye2, yevmiye3) {
            var yevmiyeLabels = document.querySelectorAll('label.radio');
            yevmiyeLabels.forEach(function (label) {
                var input = label.querySelector('input[type="radio"]');
                var span = label.querySelector('span');
                if (input.id === 'yevmiye1') {
                    input.value = yevmiye1;
                    span.textContent = yevmiye1;
                } else if (input.id === 'yevmiye2') {
                    input.value = yevmiye2;
                    span.textContent = yevmiye2;
                } else if (input.id === 'yevmiye3') {
                    input.value = yevmiye3;
                    span.textContent = yevmiye3;
                }
            });
        }
