    <script>
        document.getElementById('aybilgisi').addEventListener('change', function () {
            var secilenAy = this.options[this.selectedIndex].text;
            if (secilenAy === 'Aralık') {
                updateYevmiyeValues('1378,64', '1350,11', '1340,61');
            } else {
                updateYevmiyeValues('@ViewBag.Yevmiye1', '@ViewBag.Yevmiye2', '@ViewBag.Yevmiye3');
