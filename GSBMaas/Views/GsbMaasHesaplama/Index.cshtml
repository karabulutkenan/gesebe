    <script>
        var guvenlikRadio = document.getElementById("inlineRadio1");
        var iklimlendirmeRadio = document.getElementById("inlineRadio3");

        var radio12Saat = document.getElementById("radio12Saat");
        var radio8Saat = document.getElementById("radio8Saat");
        var yogurtcalisma = document.querySelector(".yogurtcalisma");
        var fiiliCalismaInput = document.getElementById("fiilicalisma");
        var geceCalismaInput = document.getElementById("gececalisma");
        var fazlaCalismaInput = document.getElementById("fazlacalismasaati");

        // Fonksiyonların tanımlanması
        function disableYogurtCalisma() {
            yogurtcalisma.disabled = true;
            yogurtcalisma.value = '';
        }

        function enableYogurtCalisma() {
            yogurtcalisma.disabled = false;
        }

        function clearInputFields() {
            fiiliCalismaInput.value = '';
            geceCalismaInput.value = '';
            yogurtcalisma.value = '';
            fazlaCalismaInput.value = '';
        }

        // Olay dinleyicilerin eklenmesi
        guvenlikRadio.addEventListener("click", function () {
            radio12Saat.disabled = false;
            disableYogurtCalisma();
            clearInputFields();
        });

        iklimlendirmeRadio.addEventListener("click", function () {
            radio12Saat.disabled = false;
            disableYogurtCalisma();
            clearInputFields();
        });

        var otherRadios = document.querySelectorAll('input[name="gorev"]:not(#inlineRadio1):not(#inlineRadio3)');
        otherRadios.forEach(function (radio) {
            radio.addEventListener("click", function () {
                radio12Saat.disabled = true;
                enableYogurtCalisma();
                clearInputFields();
            });
        });

        fiiliCalismaInput.addEventListener("input", function () {
            if (iklimlendirmeRadio.checked) {
                yogurtcalisma.value = fiiliCalismaInput.value;
            }
        });
    </script>

