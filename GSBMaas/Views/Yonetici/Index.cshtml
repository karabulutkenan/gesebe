                <input asp-for="MayisVergi" class="form-control" />
                <br />
                <label>Haziran</label>
                <input asp-for="HaziranVergi" class="form-control" />
                <br />
                <label>Temmuz</label>
                <input asp-for="TemmuzVergi" class="form-control" />
                <br />
                <label>Ağustos</label>
                <input asp-for="AgustosVergi" class="form-control" />
                <br />
                <label>Eylül</label>
                <input asp-for="EylulVergi" class="form-control" />
                <br />
                <label>Ekim</label>
                <input asp-for="EkimVergi" class="form-control" />
                <br />
                <label>Kasım</label>
                <input asp-for="KasimVergi" class="form-control" />
                <br />
                <label>Aralık</label>
                <input asp-for="AralikVergi" class="form-control" />
                <br />
                <button class="btn btn-block btn-lg btn-outline-dark">Kaydet</button>
            </form>


        </div>
    </div>
</div>
