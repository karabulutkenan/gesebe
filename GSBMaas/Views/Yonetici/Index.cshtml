@model GSBMaas.Context.Sabit

@{
    ViewData["Title"] = "Index";
}

<header class="d-flex justify-content-between align-items-center p-3 mb-4 bg-light border-bottom">
    <h1 class="h5 text-uppercase">Maaş Hesaplama Parametreleri Değiştirme</h1>
    <a href="/Yonetici/Cikis" class="btn btn-danger">Çıkış</a>
</header>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Sabit Değer Güncelleme Paneli </p>


            <form asp-controller="Yonetici" asp-action="Index" method="post">
                <input asp-for="ID" hidden />
                <h4>Fiyatlandırma</h4>
                <label>Sosyal Yardım</label>
                <input asp-for="SosyalYardim" class="form-control" />
                <br />
                <label>Vergi İstisna Tutarı</label>
                <input asp-for="VergiIstisnaTutar" class="form-control" />
                <br />
                <label>Büyük Şehir Yol Ücreti</label>
                <input asp-for="BuyukSehirYol" class="form-control" />
                <br />
                <label>Küçük Şehir Yol Ücreti</label>
                <input asp-for="KucukSehirYol" class="form-control" />
                <br />
                <label>Bir Gün Yemek Ücreti</label>
                <input asp-for="BirGunYemek" class="form-control" />
                <br />
                <label>Bir Gün Yoğurt Ücreti</label>
                <input asp-for="BirGunYogurt" class="form-control" />
                <br />
                <label>Bir Yıl Hizmet Zammı</label>
                <input asp-for="BirYilHizmetZammi" class="form-control" />
                <br />
                <label>Kreş Yardımı</label>
                <input asp-for="KresYardimi" class="form-control" />
                <br />
                <hr />
                <h4>Yevmiyeler</h4>
                <label>Yevmiye 1</label>
                <input asp-for="Yevmiye1" class="form-control" />
                <br />
                <label>Yevmiye 2</label>
                <input asp-for="Yevmiye2" class="form-control" />
                <br />
                <label>Yevmiye 3</label>
                <input asp-for="Yevmiye3" class="form-control" />
                <br />
                <hr />
                <h4>Vergi Dilimi Katsayı Oranları</h4>
                <label>Katsayı 1</label>
                <input asp-for="VergiDilimKatsayi1" class="form-control" />
                <br />
                <label>Katsayı 2</label>
                <input asp-for="VergiDilimKatsayi2" class="form-control" />
                <br />
                <label>Katsayı 3</label>
                <input asp-for="VergiDilimKatsayi3" class="form-control" />
                <br />
                <hr />
                <h4>Vergi Dilimi Yüzde Oranları</h4>
                <label>Oran 1</label>
                <input asp-for="VergiDilimOran1" class="form-control" />
                <br />
                <label>Oran 2</label>
                <input asp-for="VergiDilimOran2" class="form-control" />
                <br />
                <label>Oran 3</label>
                <input asp-for="VergiDilimOran3" class="form-control" />
                <br />
                <hr />
                <h4>Engelli Derece Fiyatlandırma</h4>
                <label>Derece 1</label>
                <input asp-for="EngelliDerece1" class="form-control" />
                <br />
                <label>Derece 2</label>
                <input asp-for="EngelliDerece2" class="form-control" />
                <br />
                <label>Derece 3</label>
                <input asp-for="EngelliDerece3" class="form-control" />
                <br />
                <hr />
                <h4>Vergi Ayları İstistna Tutarları</h4>
                <label>Ocak</label>
                <input asp-for="OcakVergi" class="form-control" />
                <br />
                <label>Şubat</label>
                <input asp-for="SubatVergi" class="form-control" />
                <br />
