
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giris</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <style>
        body{background: #000}.card{border: none;}.forms-inputs{position: relative}.forms-inputs span{position: absolute;top:-18px;left: 10px;background-color: #fff;padding: 5px 10px;font-size: 15px}.forms-inputs input{height: 50px;border: 2px solid #eee}.forms-inputs input:focus{box-shadow: none;outline: none;border: 2px solid #000}.btn{height: 50px}.success-data{display: flex;flex-direction: column}.bxs-badge-check{font-size: 90px}
    </style>
</head>
<body>
  
    <div class="container mt-5">
    <div class="row d-flex justify-content-center">
    <div class="col-md-6">
            <div class="card px-5 py-5" id="form1">
                <div class="form-data" v-if="!submitted">
                  <form asp-controller="Yonetici" asp-action="Giris" method="post">
                            <div class="forms-inputs mb-4">
                                <span>Şifre</span> <input autocomplete="off" id="password" name="password" type="password" v-model="password" class="form-control">
                                <div class="invalid-feedback">Password must be 8 character!</div>
                            </div>
                           <button v-on:click.stop.prevent="submit" class="btn btn-dark w-100">Giriş Yap</button> 
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
