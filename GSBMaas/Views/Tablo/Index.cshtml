                <button id="tamamButton" disabled class="btn btn-primary btn-block mt-1" style="width:100%">Tamam</button>
            </div>

            <script>
                // Popup açma ve kapama işlemleri
                const popup = document.getElementById("popup");
                const checkbox = document.getElementById("checkbox");
                const tamamButton = document.getElementById("tamamButton");
                // LocalStorage'da daha önce onayladı mı kontrolü
                const popupOnaylandi = localStorage.getItem("popupOnaylandi");
                if (!popupOnaylandi) {
                    popup.style.display = "block";
                }

                // Checkbox durumuna göre Tamam butonunu aktif veya pasif yapma
                checkbox.addEventListener("change", function () {
                    tamamButton.disabled = !this.checked;
                });

                // Tamam butonuna tıklandığında işlemler
                tamamButton.addEventListener("click", function () {
                    // Popup'ı kapat
                    popup.style.display = "none";
                    // Kullanıcının onayladığını işaretle ve LocalStorage'a kaydet
                    localStorage.setItem("popupOnaylandi", true);
                });
            </script>

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    var today = new Date();
                    var subat1 = new Date(today.getFullYear(), 1, 1); // Şubat ayı için 0'dan başlayarak 1, 1 Şubat

                    // ID'leri kullanarak tabloları seçin
                    var table1 = document.getElementById('tabloId1'); // Bu ve aşağıdaki ID'lerinizi tablolarınızın ID'leriyle değiştirin
                    var table2 = document.getElementById('tabloId2');

                    if (today >= subat1) {
                        if (table1) table1.style.display = 'none'; // Tablo varsa gizle
                        if (table2) table2.style.display = 'none'; // Tablo varsa gizle
                    }
