<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TOLEYİS E-SENDİKA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Menü başlangıçta gizli olacak */
        #menuCanvas {
            position: fixed;
            top: 0;
            right: -300px; /* Sayfa dışında başlayacak */
            width: 300px;
            height: 100vh;
            background-color: white;
            box-shadow: -3px 0px 10px rgba(0,0,0,0.2);
            transition: right 0.3s ease-in-out; /* Yumuşak açılma efekti */
            z-index: 1050;
        }

            /* Menü Açıkken */
            #menuCanvas.show {
                right: 0;
            }

        /* Sayfanın geri kalanı kararmasın diye arkaplan */
        #menuBackdrop {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1049;
        }
    </style>
</head>

@using Microsoft.AspNetCore.Http
@{
    var userAd = Context.Session.GetString("UserAd") ?? "Misafir";
    var userSoyad = Context.Session.GetString("UserSoyad") ?? "";
}

<header class="bg-white shadow-sm py-2">
    <div class="container d-flex justify-content-between align-items-center">
        <!-- Left: Home Icon -->
        <a href="/Home" class="text-decoration-none text-dark">
            <i class="bi bi-house-fill" style="font-size: 1.5rem;"></i>
        </a>

        <!-- Center: Title and Subtitle -->
        <div class="text-center">
            <img src="/images/esendikalogo.png" alt="E-Sendika Logo" class="me-2 mt2" style="height: 60px;">
        </div>

        <!-- Right: Menu Icon -->
        <button class="btn btn-link text-dark p-0" id="menuToggle">
            <i class="bi bi-list" style="font-size: 1.5rem;"></i>
        </button>
    </div>
</header>

<body class="overflow-auto" style="scrollbar-width: none; -ms-overflow-style: none;">
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="d-flex justify-content-between align-items-center py-3 fixed-bottom" style="background-color: #f8f9fa;">
        <div class="text-center w-100">
            <span class="text-muted">&copy; 2025 TOLEYİS İletişim ve Sosyal Medya Komitesi</span>
        </div>
        <div class="me-3">
            <span id="inspiration" class="text-primary fw-bold" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#inspirationModal">
                Proje İlham Kaynağı
            </span>
        </div>
    </footer>

    <!-- ✅ MENÜ (Sağdan Açılan) -->
    <div id="menuBackdrop"></div>
    <div id="menuCanvas">
        <div class="p-3 bg-primary text-white d-flex justify-content-between align-items-center">
            <h5>Hoşgeldiniz, @userAd @userSoyad</h5>
            <button class="btn-close btn-close-white" id="closeMenu"></button>
        </div>
        <div class="p-3">
            <ul class="list-group">
                <li class="list-group-item"><a href="/Home" class="text-decoration-none text-dark">🏠 Anasayfa</a></li>
                <li class="list-group-item"><a href="/Tablo" class="text-decoration-none text-dark">📊 GSB Maaş Hesaplama</a></li>
                <li class="list-group-item"><a href="/Home/DilekceOrnekleri" class="text-decoration-none text-dark">📜 Dilekçe Örnekleri</a></li>
                <li class="list-group-item"><a href="/KamuMisafirhaneleri" class="text-decoration-none text-dark">🏨 Kamu Misafirhaneleri</a></li>
                <li class="list-group-item"><a href="/Home/KanunVeYonetmelikler" class="text-decoration-none text-dark">📖 Kanun ve Yönetmelikler</a></li>
                <li class="list-group-item"><a href="/KamuKidemTazminatiHesaplama" class="text-decoration-none text-dark">💰 Kıdem Tazminatı Hesaplama</a></li>
                <li class="list-group-item"><a href="/SorularCevaplar" class="text-decoration-none text-dark">❓ Soru-Cevap</a></li>
            </ul>
            <div class="mt-3">
                <form asp-controller="Home" asp-action="Cikis" method="post">
                    <button type="submit" class="btn btn-danger w-100">🚪 Çıkış Yap</button>
                </form>
            </div>
        </div>
    </div>

    <!-- ✅ Proje İlham Kaynağı Modalı -->
    <div class="modal fade" id="inspirationModal" tabindex="-1" aria-labelledby="inspirationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Proje İlham Kaynağı</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Bu proje <b>Gözde Gültepe</b>'nin <i>Artinchain Sendika</i> isimli tezinden esinlenerek kodlanmıştır.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Icons CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var menuToggle = document.getElementById("menuToggle");
            var closeMenu = document.getElementById("closeMenu");
            var menuCanvas = document.getElementById("menuCanvas");
            var menuBackdrop = document.getElementById("menuBackdrop");

            // Menü açma
            menuToggle.addEventListener("click", function () {
                menuCanvas.classList.add("show");
                menuBackdrop.style.display = "block";
            });

            // Menü kapatma
            closeMenu.addEventListener("click", function () {
                menuCanvas.classList.remove("show");
                menuBackdrop.style.display = "none";
            });

            // Sayfaya tıklanınca menüyü kapatma
            menuBackdrop.addEventListener("click", function () {
                menuCanvas.classList.remove("show");
                menuBackdrop.style.display = "none";
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
