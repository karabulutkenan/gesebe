<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TOLEYİS E-SENDİKA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

    <header class="bg-white shadow-sm py-2">
        <div class="container d-flex justify-content-between align-items-center">
            <!-- Left: Home Icon -->
            <a href="/Home" class="text-decoration-none text-dark">
                <i class="bi bi-house-fill" style="font-size: 1.5rem;"></i>
            </a>

            <!-- Center: Title and Subtitle -->
            <div class="text-center">
                <img src="/images/esendikalogo.png" alt="E-Sendika Logo" class="me-2 mt2" style="height: 60px;">
            </div>

            <!-- Right: Menu Icon -->
            <button class="btn btn-link text-dark p-0">
                <i class="bi bi-list" style="font-size: 1.5rem;"></i>
            </button>
        </div>
    </header>
<body class="overflow-auto" style="scrollbar-width: none; -ms-overflow-style: none;">
    <div class="container" >
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="d-flex justify-content-between align-items-center py-3 fixed-bottom" style="background-color: #f8f9fa;">
        <div class="text-center w-100">
            <span class="text-muted">&copy; 2025 TOLEYİS İletişim ve Sosyal Medya Komitesi</span>
        </div>
        <div class="me-3">
            <span id="inspiration" class="text-primary fw-bold" style="cursor: pointer;" data-bs-toggle="tooltip" title="Bu proje Gözde Gültepe'nin Artinchain Sendika isimli Tezinden esinlenerek kodlanmıştır.">
                Proje İlham Kaynağı
            </span>
        </div>
    </footer>

    <script>
        // Bootstrap Tooltip Aktif Etme
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
            });
    </script>

    <!-- Bootstrap Icons CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
